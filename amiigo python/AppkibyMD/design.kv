#:kivy 2.1.0
#Import RiseIntransition kivy.uix.screanmanager.RiseIntransition
#Import SlideTransition kivy.uix.screenmanager.SlideTransition

<ElementCard@MDCard>:
    radius:'10dp'
    spacing:'10dp'
    padding:'10dp'
    image:''
    text:''
    sub_text:''
    orientation:'vertical'
    ripple_behavior: true
    on_realease:
        app.root.transition= RiseIntransition()
    imagen:
        root.image
        halign: 'center'
    MDBoxLayout:
        orientation:'vertical'
        MDLaybe:
            text: root.text
            halign: 'center'
        MDlabel:
            sub_text:root.sub_text
            halign: 'center'

<CustomizeScreen@MDBoxLayout>:
    orientation:'vertical'
    text:''
    padding: 100
    MDLabel:
        text:root.text
        halign:'center'
        pos_hint:{'center.x':.5}         
MDFillRoundFlatButton:
    text:'Regresar'
    pos_hint:{'center.x':0.5}
    on_release:
        app.root.current= 'screen_principal'
        app.root.transtiton:SlideTransition(direction='left')

<ui>
    MSDcreen:
        name:'_screen_principal_'
        md_dg_color:0,.5,.5, 1
        MDBoxLayout:
            orientaion: 'vertical'
            MDBoxLayout:
                size_hint:1, .2
                orientation: 'horizontal'
                padding:'10dp'
                MDCard:
                    radius:'10dp'
                    padding: '10dp'
                    line_color:1,0,1,1
                    MDLabel:
                        text:"amiigo"
                        halign: 'center'
                        pos_hint:{'center.y':0.5}
                    MDSwitch:
                        pos_hint_hint:{'center_y':0.5}
                        on_active:
                            app.change_style(*args)
            MDGridLayout:
                cols: 3
                size_hint:1; .8
                padding:['10dp,'10dp','10dp','10dp']
                ElementCard:
                    text:'IA'
                    sub_text:'Citas Agendadas'
                    image: 'images/ia.png'
                    on_release:

    MDscreen:
        name:'screen1'
        CustomizeScreen:
            text:'Pantalla Uno'